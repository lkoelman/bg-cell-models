                        "globals": {},
                    },
                    "tau_r_GABAA":   2.0, // [ms] rise time
                    "tau_d_GABAA":   6.0, // [ms] decay time
                    // GABA-B receptor
                    "gmax_GABAB":    35e-3, // [uS], adjusted for U1
