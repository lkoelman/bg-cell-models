{
// =============================================================================
// Global Simulation Parameters
// =============================================================================
    // Global simulation parameters
    "simulation": {
        "duration": 10000,
        "timestep": 0.025,
        "cells_per_population": 100,
    },
// =============================================================================
// CTX Population Parameters
